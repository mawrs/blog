---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section class="bg-neutral-100">
    <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8 py-20">
      <div class="lg:ml-96 lg:flex lg:w-full lg:justify-end lg:pl-32">
        <div class="mx-auto max-w-lg lg:mx-0 lg:w-0 lg:max-w-xl lg:flex-auto">
          <h1
            class="font-display uppercase text-5xl font-medium text-kotei-800">
            {frontmatter.title}
          </h1>
          <div class="prose-styles mt-4">
            <p>{frontmatter.pubDate.toString().slice(0, 10)}</p>
            <p><em>{frontmatter.description}</em></p>
            <p>Written by: {frontmatter.author}</p>
            <div class="flex flex-wrap gap-3 mt-12 not-prose">
              {
                frontmatter.tags.map((tag) => (
                  <span class="text-neutral-500 text-xs hover:text-kotei-800">
                    <a
                      title={tag}
                      aria-label={tag}
                      href={`/tags/${tag}`}>
                      {tag}
                    </a>
                  </span>
                ))
              }
            </div>
            <img
              src={frontmatter.image.url}
              alt={frontmatter.image.alt}
            />
            <slot />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
