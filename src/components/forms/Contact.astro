---
// Define the contact information in an array
const contactSections = [
  { title: "Work with us", email: "workwithus@lexingtonthemes.com" },
  { title: "Press", email: "press@lexingtonthemes.com" },
  { title: "Join our team", email: "careers@lexingtonthemes.com" },
  { title: "Say hello", email: "hello@lexingtonthemes.com" },
];
---

<section class="bg-neutral-100">
  <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8 py-20">
    <div class="lg:ml-96 lg:flex lg:w-full lg:justify-end lg:pl-32">
      <div class="mx-auto max-w-lg lg:mx-0 lg:w-0 lg:max-w-xl lg:flex-auto">
        <h1
          class="font-display text-5xl    font-medium text-kotei-800">
          Contact us
        </h1>
        <p class="mt-4 text-neutral-500 text-sm">
          Please inform us about your requirements, and we can meet to discuss
          the specifics.
        </p>
        <div
          class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:col-span-2 lg:gap-8 mt-8 border-t pt-8">
          {
            contactSections.map((section) => (
              <div>
                <h3 class="text-base text-kotei-800">{section.title}</h3>
                <dl class="mt-3 space-y-1 text-sm leading-6 text-neutral-500">
                  <div>
                    <dt class="sr-only">Email</dt>
                    <dd>
                      <a href={`mailto:${section.email}`}>{section.email}</a>
                    </dd>
                  </div>
                </dl>
              </div>
            ))
          }
        </div>
        <form
          action="#"
          method="POST"
          class="mt-8 border-t pt-8">
          <div class="grid grid-cols-1 gap-x-8 gap-y-10 sm:grid-cols-2">
            <div>
              <label
                for="first-name"
                class="block text-sm text-neutral-500"
                >First name</label
              >
              <div class="mt-2.5">
                <input
                  id="first-name"
                  type="text"
                  name="first-name"
                  placeholder="Your first name"
                  aria-placeholder="Your first name"
                  autocomplete="given-name"
                  class="block w-full border-0 px-0 pt-2 pb-8 text-neutral-500 ring-0 focus:ring-0 focus:border-neutral-300 bg-transparent border-b border-neutral-300 placeholder:text-neutral-400 sm:text-sm sm:leading-6"
                />
              </div>
            </div>
            <div>
              <label
                for="last-name"
                class="block text-sm text-neutral-500"
                >Last name</label
              >
              <div class="mt-2.5">
                <input
                  id="last-name"
                  type="text"
                  name="last-name"
                  placeholder="Your last name"
                  aria-placeholder="Your last name"
                  autocomplete="given-name"
                  class="block w-full border-0 px-0 pt-2 pb-8 text-neutral-500 ring-0 focus:ring-0 focus:border-neutral-300 bg-transparent border-b border-neutral-300 placeholder:text-neutral-400 sm:text-sm sm:leading-6"
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label
                for="email"
                class="block text-sm text-neutral-500"
                >Email</label
              >
              <div class="mt-2.5">
                <input
                  id="email"
                  type="email"
                  name="email"
                  autocomplete="email"
                  placeholder="Your  email"
                  class="block w-full border-0 px-0 pt-2 pb-8 text-neutral-500 ring-0 focus:ring-0 focus:border-neutral-300 bg-transparent border-b border-neutral-300 placeholder:text-neutral-400 sm:text-sm sm:leading-6"
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label
                for="phone-number"
                class="block text-sm text-neutral-500"
                >Phone number</label
              >
              <div class="mt-2.5">
                <input
                  id="phone-number"
                  type="tel"
                  name="phone-number"
                  placeholder="Your phone number"
                  aria-placeholder="Your phone number"
                  autocomplete="tel"
                  class="block w-full border-0 px-0 pt-2 pb-8 text-neutral-500 ring-0 focus:ring-0 focus:border-neutral-300 bg-transparent border-b border-neutral-300 placeholder:text-neutral-400 sm:text-sm sm:leading-6"
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label
                for="message"
                class="block text-sm text-neutral-500"
                >Message</label
              >
              <div class="mt-2.5">
                <textarea
                  id="message"
                  name="message"
                  placeholder="Your message"
                  aria-placeholder="Your message"
                  rows="4"
                  class="block w-full border-0 px-0 pt-2 pb-8 text-neutral-500 ring-0 focus:ring-0 focus:border-neutral-300 bg-transparent border-b border-neutral-300 placeholder:text-neutral-400 sm:text-sm sm:leading-6"
                ></textarea>
              </div>
            </div>
          </div>
          <div class="mt-8 flex justify-end">
            <button
              type="submit"
              class="flex items-center justify-center h-14 py-2.5 px-4 border-2 border-kotei-800 text-sm font-semibold text-kotei-800 transition-all hover:text-kotei-1000 hover:border-kotei-1000 w-full"
              >Send message</button
            >
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
